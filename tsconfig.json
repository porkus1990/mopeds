{
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
    },
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}