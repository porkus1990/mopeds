{
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
    },
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": ".",
    },
    "include": ["src/**/*", "__tests__"],
    "exclude": ["node_modules"]
}